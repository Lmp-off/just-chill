<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BlankFragment">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/appCompatButtonNew"
        android:text="newest"
        android:background="@drawable/standart_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/appCompatButtonTopics"
        android:text="Topics"
        android:background="@drawable/standart_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appCompatButtonNew" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_Create"
        android:text="Create"
        android:background="@drawable/standart_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appCompatButtonTopics" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_MyTasks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My tasks"
        android:background="@drawable/standart_buttons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_Create" />

</androidx.constraintlayout.widget.ConstraintLayout>